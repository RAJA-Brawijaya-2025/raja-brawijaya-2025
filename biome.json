{
	"$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
            "a11y": {
                "noAutofocus": "off",
                "useButtonType": "off",
                "useKeyWithClickEvents": "error",
                "useValidAnchor": "error",
                "noStaticElementInteractions": "off"
            },
            "nursery": {
                "useUniqueElementIds": "warn",
                "noNestedComponentDefinitions": "off"
            },
            "complexity": {
                "noForEach": "off",
                "noBannedTypes": "error",
                "noUselessFragments": "warn"
            },
            "correctness": {
                "useExhaustiveDependencies": "off",
                "noUnusedVariables": "warn",
                "noUnusedImports": "warn",
                "useHookAtTopLevel": "error",
                "noChildrenProp": "error",
                "noUnreachable": "error"
            },
            "style": {
                "noNegationElse": "warn",
                "useFragmentSyntax": "off",
                "useImportType": "error",
                "useSelfClosingElements": "warn"
            },
            "suspicious": {
                "noArrayIndexKey": "off",
                "noConsole": "warn",
                "noEmptyBlockStatements": "error",
                "useAwait": "error",
                "noExplicitAny": "warn",
                "noDoubleEquals": "error",
                "noImplicitAnyLet": "warn",
                "noShadowRestrictedNames": "error"
            },
            "performance": {
                "noAccumulatingSpread": "warn",
                "noDelete": "warn"
            }
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
            "indentStyle": "space",
            "lineWidth": 80,
            "lineEnding": "lf",
            "bracketSpacing": true,
            "jsxQuoteStyle": "double",
            "arrowParentheses": "always",
            "indentWidth": 2
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
